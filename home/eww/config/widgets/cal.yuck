(defpoll date :interval "100s" :initial `{"d":"1","m":"1","y":"0"}`
  `date '+{"d":"%d","m":"%m","y":"%Y"}'`)
(defwindow cal
  :monitor 0
  :exclusive false
  :stacking "overlay"
  :geometry (geometry :anchor "top right" :x 10 :y 10 :width "20%" :height "25%")
  (calendar :class "widget_cal"
    :tooltip "${date.d}-${date.m}-${date.y}"
    :day {date.d}
    :month {date.m}
    :year {date.y}))