# !/bin/bash

battery="$(acpi | grep 'Battery 1' | grep -o '[0-9]*%' | grep -o '[0-9]*')"
if [ "$battery" -gt 75 ]; then
      icon=""
elif [ "$battery" -gt 50 ]; then
      icon=""
elif [ "$battery" -gt 25 ]; then
      icon=""
elif [ "$battery" -gt 0 ]; then 
      icon=""
else 
      icon=""
fi
battery="$battery%"

discharging="$(acpi | grep 'Battery 1' | grep -o Discharging)"
if [ "$discharging" != "Discharging" ]; then
      icon="$icon 󱐋"
fi

echo "$battery $icon"
