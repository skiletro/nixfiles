#!/usr/bin/env bash

ICON="ó°•¾"
function VOLUME {
  pamixer --get-volume
}

if [[ $1 == 'up' ]]; then
  pamixer -i 5
  bash ~/.config/eww/launchers/osd $ICON $(VOLUME)
fi

if [[ $1 == 'down' ]]; then
  pamixer -d 5
  bash ~/.config/eww/launchers/osd $ICON $(VOLUME)
fi

if [[ $1 == 'mute' ]]; then
  pamixer --set-volume 0
  bash ~/.config/eww/launchers/osd $ICON $(VOLUME)
fi
